<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.futin.tabletest.userInterface.tables.ShowCitiesTableView"
    android:id="@+id/cityTableLayout">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Search:"
        android:id="@+id/textView11"
        android:layout_below="@+id/textView7"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp" />

    <ScrollView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/scrollViewStudents"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_toStartOf="@+id/checkBoxCity"
        android:layout_marginRight="0dp"
        android:layout_below="@+id/textView8"
        android:layout_alignEnd="@+id/checkBoxCity">

        <TableLayout
            android:id="@+id/tblLayoutCity"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:shrinkColumns="*"
            android:stretchColumns="*">

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

                <TextView
                    android:id="@+id/cityIdColumn"
                    android:text="O.N."
                    android:textStyle="bold|italic"
                    android:typeface="serif"
                    android:layout_column="0"
                    android:textSize="22dp"
                    android:textColor="#ff3b5020"
                    android:gravity="center"></TextView>

                <TextView
                    android:id="@+id/cityNameColumn"
                    android:text="Name"
                    android:textStyle="bold|italic"
                    android:typeface="serif"
                    android:layout_column="1"
                    android:layout_width="match_parent"
                    android:textSize="22dp"
                    android:textColor="#ff3b5020"
                    android:gravity="center"></TextView>

                <TextView
                    android:id="@+id/cityPttColumn"
                    android:text="Ptt"
                    android:textStyle="bold|italic"
                    android:typeface="serif"
                    android:layout_column="2"
                    android:textSize="22dp"
                    android:textColor="#ff3b5020"
                    android:gravity="center"></TextView>

            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

            </TableRow>
        </TableLayout>
    </ScrollView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="City table"
        android:id="@+id/textView7"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="25dp"
        android:textStyle="bold|italic"
        android:textColor="#ff3b5020" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtSearchCity"
        android:hint="search for city"
        android:layout_alignBottom="@+id/textView11"
        android:layout_marginBottom="-5dp"
        android:layout_toEndOf="@+id/textView11"
        android:minWidth="300dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large text"
        android:id="@+id/txtNoResultCity"
        android:layout_alignTop="@+id/scrollViewStudents"
        android:layout_alignParentStart="true"
        android:layout_marginTop="55dp"
        android:layout_alignEnd="@+id/scrollViewStudents"
        android:textColor="#ff6c6c6c"
        android:textSize="30dp"
        android:textStyle="bold|italic"
        android:visibility="invisible" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delete row"
        android:id="@+id/btnDeleteRowCity"
        android:onClick="deleteRow"
        android:layout_alignBottom="@+id/txtSearchCity"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="O.N."
        android:id="@+id/textView8"
        android:textSize="22dp"
        android:textStyle="bold|italic"
        android:gravity="center"
        android:textColor="#ff3b5020"
        android:layout_alignTop="@+id/textView9"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="Name"
        android:id="@+id/textView9"
        android:textColor="#ff3b5020"
        android:textSize="22dp"
        android:textStyle="bold|italic"
        android:gravity="center"
        android:layout_below="@+id/btnDeleteRowCity"
        android:layout_alignEnd="@+id/textView7"
        android:layout_marginEnd="67dp"
        android:layout_marginRight="75dp" />

    <TextView
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="Ptt"
        android:id="@+id/textView12"
        android:gravity="center"
        android:textStyle="bold|italic"
        android:textSize="22dp"
        android:textColor="#ff3b5020"
        android:layout_above="@+id/scrollViewStudents"
        android:layout_toEndOf="@+id/textView9" />

    <TextView
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:id="@+id/checkBoxCity"
        android:textSize="22dp"
        android:textStyle="bold|italic"
        android:gravity="center"
        android:textColor="#ff3b5020"
        android:layout_below="@+id/btnDeleteRowCity"
        android:layout_alignStart="@+id/btnDeleteRowCity" />

</RelativeLayout>
