<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.futin.tabletest.userInterface.tables.ShowCitiesTableView"
    android:id="@+id/studentWithInstrumentTableLayout"
    android:background="@drawable/dirty_grey_img"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Search:"
        android:id="@+id/textView11"
        android:layout_below="@+id/textView7"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp"
        android:textStyle="bold|italic"
        android:textSize="22dp"
        android:textColor="#ffe4e4e4" />

    <ScrollView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/scrollViewStudWithInst"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/txtStudWithInstONHeader">

        <TableLayout
            android:id="@+id/tblLayoutStudentWithInstrument"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:shrinkColumns="*"
            android:stretchColumns="*">

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="ON"
                    android:id="@+id/studentWithInstONColumn"
                    android:layout_column="0"
                    android:textSize="16dp"
                    android:textColor="#ff3b5020"
                    android:textStyle="bold|italic" />

                <TextView
                    android:id="@+id/studentNameColumn"
                    android:text="Student"
                    android:textStyle="bold|italic"
                    android:typeface="serif"
                    android:layout_span="3"
                    android:textSize="16dp"
                    android:layout_weight="2"
                    android:textColor="#ff3b5020"
                    android:layout_width="match_parent"
                    android:layout_column="1"></TextView>

                <TextView
                    android:id="@+id/employeeNameColumn"
                    android:text="Employee"
                    android:textStyle="bold|italic"
                    android:typeface="serif"
                    android:layout_column="3"
                    android:layout_width="match_parent"
                    android:textSize="16sp"
                    android:layout_weight="2"
                    android:textColor="#ff3b5020"
                    android:layout_span="3"></TextView>

                <TextView
                    android:id="@+id/instrumentNameColumn"
                    android:text="Instrument"
                    android:textStyle="bold|italic"
                    android:typeface="serif"
                    android:layout_column="6"
                    android:textSize="16dp"
                    android:layout_weight="2"
                    android:textColor="#ff3b5020"
                    android:layout_width="match_parent"
                    android:layout_span="3"></TextView>
                <TextView
                    android:id="@+id/numberOfInstrumentsColumn"
                    android:text="Quantity"
                    android:textStyle="bold|italic"
                    android:typeface="serif"
                    android:layout_column="8"
                    android:textSize="16dp"
                    android:layout_weight="2"
                    android:textColor="#ff3b5020"
                    android:layout_width="match_parent"
                    android:layout_span="2"></TextView>
                <TextView
                    android:id="@+id/dateColumn"
                    android:text="Date"
                    android:textStyle="bold|italic"
                    android:typeface="serif"
                    android:layout_column="8"
                    android:textSize="16dp"
                    android:layout_weight="2"
                    android:textColor="#ff3b5020"
                    android:layout_width="match_parent"
                    android:layout_span="3"></TextView>
            </TableRow>
            </TableLayout>
    </ScrollView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Student with instrument table"
        android:id="@+id/textView7"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="25dp"
        android:textStyle="bold|italic"
        android:textColor="#ffe4e4e4" />

    <EditText
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:id="@+id/txtSearchStudentWithInstrument"
        android:hint="search for student "
        android:layout_alignBottom="@+id/textView11"
        android:layout_marginBottom="-10dp"
        android:layout_alignEnd="@+id/textView7"
        android:layout_toEndOf="@+id/textView11"
        android:layout_marginRight="75dp"
        android:textColorHint="#ffbbbbbb"
        android:textColor="#ffe4e4e4" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large text"
        android:id="@+id/txtNoResultStudWithInst"
        android:layout_alignTop="@+id/scrollViewStudWithInst"
        android:layout_alignParentStart="true"
        android:layout_marginTop="30dp"
        android:layout_alignEnd="@+id/scrollViewStudWithInst"
        android:textColor="#ff6c6c6c"
        android:textSize="30dp"
        android:textStyle="bold|italic"
        android:visibility="invisible" />

    <TextView
        android:layout_width="15dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="  O.N."
        android:id="@+id/txtStudWithInstONHeader"
        android:layout_below="@+id/textView11"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/txtSearchStudentWithInstrument"
        android:layout_marginTop="10dp"
        android:textColor="#ffe4e4e4"
        android:textSize="16dp"
        android:textStyle="bold|italic"
        android:textColorHint="#ffbbbbbb" />

    <TextView
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Student"
        android:id="@+id/txtStudWithInstStudentHeader"
        android:layout_below="@+id/txtSearchStudentWithInstrument"
        android:layout_toEndOf="@+id/txtStudWithInstONHeader"
        android:layout_marginTop="10dp"
        android:textColor="#ffe4e4e4"
        android:textSize="16dp"
        android:textStyle="bold|italic"
        android:layout_marginLeft="-5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Employee"
        android:id="@+id/txtStudWithInstEmployeeHeader"
        android:layout_below="@+id/txtSearchStudentWithInstrument"
        android:layout_toEndOf="@+id/txtStudWithInstStudentHeader"
        android:layout_marginStart="25dp"
        android:layout_marginTop="10dp"
        android:textColor="#ffe4e4e4"
        android:textSize="16dp"
        android:textStyle="bold|italic"
        android:layout_marginLeft="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Instrument"
        android:id="@+id/txtStudWithInstInstrumentHeader"
        android:layout_below="@+id/txtSearchStudentWithInstrument"
        android:layout_toEndOf="@+id/txtStudWithInstEmployeeHeader"
        android:layout_marginStart="25dp"
        android:layout_marginTop="10dp"
        android:textColor="#ffe4e4e4"
        android:textSize="16dp"
        android:textStyle="bold|italic"
        android:layout_marginLeft="30dp" />

    <TextView
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Quantity"
        android:id="@+id/txtStudWithInstQuantityHeader"
        android:layout_below="@+id/txtSearchStudentWithInstrument"
        android:layout_toEndOf="@+id/txtStudWithInstInstrumentHeader"
        android:layout_marginStart="29dp"
        android:layout_marginTop="10dp"
        android:textColor="#ffe4e4e4"
        android:textSize="16dp"
        android:textStyle="bold|italic"
        android:layout_marginLeft="10dp" />

    android:layout_width="130dp"
    android:layout_height="30dp"
    android:background="@drawable/button_shape"
    android:shadowColor="#A8A8A8"
    android:shadowDx="0"
    android:shadowDy="0"
    android:shadowRadius="5"
    android:textSize="15sp"
    android:nestedScrollingEnabled="false"
    android:layout_centerVertical="true"
    android:text="Delete"
    android:id="@+id/btnDeleteRowCity"
    android:onClick="deleteRow"
    android:layout_alignBottom="@+id/txtSearchCity"
    android:layout_alignParentEnd="true"
    android:textColor="#ffe4e4e4"
    android:layout_marginBottom="20dp" />

    <Button
        android:layout_width="130dp"
        android:layout_height="30dp"
        android:background="@drawable/button_shape"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:textSize="15sp"
        android:nestedScrollingEnabled="false"
        android:textColor="#ffe4e4e4"
        android:text="Delete"
        android:layout_centerVertical="true"
        android:id="@+id/btnDeleteRowStudWithInst"
        android:layout_below="@+id/textView7"
        android:layout_alignParentEnd="true"
        android:onClick="deleteRow"
        android:textStyle="bold|italic" />

    <TextView
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Date"
        android:id="@+id/txtStudWithInstDateHeader"
        android:textColor="#ffe4e4e4"
        android:textStyle="bold|italic"
        android:textSize="16dp"
        android:layout_above="@+id/txtNoResultStudWithInst"
        android:layout_toEndOf="@+id/txtSearchStudentWithInstrument" />

</RelativeLayout>
