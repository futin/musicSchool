<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.futin.tabletest.userInterface.tables.ShowCitiesTableView"
    android:id="@+id/studentWithInstrumentTableLayout">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Search:"
        android:id="@+id/textView11"
        android:layout_below="@+id/textView7"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp" />

    <ScrollView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/scrollViewStudWithInst"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/include4">

        <TableLayout
            android:id="@+id/tblLayoutStudentWithInstrument"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:shrinkColumns="*"
            android:stretchColumns="*">

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

                <TextView
                    android:id="@+id/studentNameColumn"
                    android:text="Student"
                    android:textStyle="bold|italic"
                    android:typeface="serif"
                    android:layout_column="0"
                    android:layout_span="3"
                    android:textSize="16dp"
                    android:layout_weight="2"
                    android:textColor="#ff3b5020"
                    android:layout_width="match_parent"></TextView>

                <TextView
                    android:id="@+id/employeeNameColumn"
                    android:text="Employee"
                    android:textStyle="bold|italic"
                    android:typeface="serif"
                    android:layout_column="3"
                    android:layout_width="match_parent"
                    android:textSize="16sp"
                    android:layout_weight="2"
                    android:textColor="#ff3b5020"
                    android:layout_span="3"></TextView>

                <TextView
                    android:id="@+id/instrumentNameColumn"
                    android:text="Instrument"
                    android:textStyle="bold|italic"
                    android:typeface="serif"
                    android:layout_column="6"
                    android:textSize="16dp"
                    android:layout_weight="2"
                    android:textColor="#ff3b5020"
                    android:layout_width="match_parent"
                    android:layout_span="3"></TextView>
                <TextView
                    android:id="@+id/numberOfInstrumentsColumn"
                    android:text="Quantity"
                    android:textStyle="bold|italic"
                    android:typeface="serif"
                    android:layout_column="8"
                    android:textSize="16dp"
                    android:layout_weight="2"
                    android:textColor="#ff3b5020"
                    android:layout_width="match_parent"
                    android:layout_span="2"></TextView>
                <TextView
                    android:id="@+id/dateColumn"
                    android:text="Date"
                    android:textStyle="bold|italic"
                    android:typeface="serif"
                    android:layout_column="8"
                    android:textSize="16dp"
                    android:layout_weight="2"
                    android:textColor="#ff3b5020"
                    android:layout_width="match_parent"
                    android:layout_span="3"></TextView>
            </TableRow>
            </TableLayout>
    </ScrollView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Student with instrument table"
        android:id="@+id/textView7"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="25dp"
        android:textStyle="bold|italic"
        android:textColor="#ff3b5020" />

    <include layout="@layout/student_with_instrument_table_view"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:layout_below="@+id/txtSearchStudentWithInstrument"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"
        android:id="@+id/include4"></include>

    <EditText
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:id="@+id/txtSearchStudentWithInstrument"
        android:hint="search for student "
        android:layout_alignBottom="@+id/textView11"
        android:layout_marginBottom="-5dp"
        android:layout_alignEnd="@+id/scrollViewStudWithInst"
        android:layout_toEndOf="@+id/textView11" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large text"
        android:id="@+id/txtNoResultStudWithInst"
        android:layout_alignTop="@+id/scrollViewStudWithInst"
        android:layout_alignParentStart="true"
        android:layout_marginTop="55dp"
        android:layout_alignEnd="@+id/scrollViewStudWithInst"
        android:textColor="#ff6c6c6c"
        android:textSize="30dp"
        android:textStyle="bold|italic"
        android:visibility="invisible" />

</RelativeLayout>
