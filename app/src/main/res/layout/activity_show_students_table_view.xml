<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.futin.tabletest.userInterface.tables.ShowCitiesTableView"
    android:id="@+id/studentTableLayout">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Search:"
        android:id="@+id/textView11"
        android:layout_below="@+id/textView7"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp"
        android:textStyle="bold|italic"
        android:textColor="#ff3b5020" />

    <ScrollView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/scrollViewStudents"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/textView17">

        <TableLayout
            android:id="@+id/tblLayoutStudent"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:shrinkColumns="*"
            android:stretchColumns="*"
            android:layout_marginTop="0dp">

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="ON"
                    android:id="@+id/studentOrdnalNumbColumn"
                    android:layout_column="0"
                    android:layout_span="1"
                    android:textColor="#ff3b5020"
                    android:textSize="22dp"
                    android:textStyle="bold|italic" />

                <TextView
                    android:id="@+id/studentIdColumn"
                    android:text="Id"
                    android:textStyle="bold|italic"
                    android:typeface="serif"
                    android:layout_column="1"
                    android:layout_span="4"
                    android:textSize="22dp"
                    android:layout_weight="1"
                    android:textColor="#ff3b5020"
                    android:layout_width="match_parent"></TextView>

                <TextView
                    android:id="@+id/studentFirstAndLastNameColumn"
                    android:text="Name"
                    android:textStyle="bold|italic"
                    android:typeface="serif"
                    android:layout_column="2"
                    android:layout_span="6"
                    android:layout_width="match_parent"
                    android:textSize="22dp"
                    android:layout_weight="1"
                    android:textColor="#ff3b5020"></TextView>

                <TextView
                    android:id="@+id/studentPttColumn"
                    android:text="City ptt"
                    android:textStyle="bold|italic"
                    android:typeface="serif"
                    android:layout_column="8"
                    android:textSize="22dp"
                    android:layout_weight="1"
                    android:textColor="#ff3b5020"
                    android:layout_width="match_parent"></TextView>
            </TableRow>
            </TableLayout>
    </ScrollView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Student table"
        android:id="@+id/textView7"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="25dp"
        android:textStyle="bold|italic"
        android:textColor="#ff3b5020" />

    <EditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:id="@+id/txtSearchStudent"
        android:hint="search for student"
        android:layout_alignBottom="@+id/textView11"
        android:layout_marginBottom="-5dp"
        android:layout_toEndOf="@+id/textView21" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large text"
        android:id="@+id/txtNoResultStudents"
        android:layout_alignTop="@+id/scrollViewStudents"
        android:layout_alignParentStart="true"
        android:layout_marginTop="30dp"
        android:layout_alignEnd="@+id/scrollViewStudents"
        android:textColor="#ff6c6c6c"
        android:textSize="30dp"
        android:textStyle="bold|italic"
        android:visibility="invisible" />

    <TextView
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Id"
        android:id="@+id/textView17"
        android:textColor="#ff3b5020"
        android:textStyle="bold|italic"
        android:textSize="22dp"
        android:layout_below="@+id/txtSearchStudent"
        android:layout_toEndOf="@+id/textView21"
        android:layout_marginStart="27dp"
        android:layout_marginLeft="40dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Name"
        android:id="@+id/textView18"
        android:textColor="#ff3b5020"
        android:textStyle="bold|italic"
        android:textSize="22dp"
        android:layout_marginRight="15dp"
        android:layout_below="@+id/txtSearchStudent"
        android:layout_alignEnd="@+id/textView7" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="City ptt"
        android:id="@+id/textView19"
        android:textColor="#ff3b5020"
        android:textStyle="bold|italic"
        android:textSize="22dp"
        android:layout_alignTop="@+id/textView18"
        android:layout_alignEnd="@+id/btnDeleteRowStudent"
        android:layout_marginEnd="68dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delete row"
        android:id="@+id/btnDeleteRowStudent"
        android:onClick="deleteRow"
        android:layout_alignBottom="@+id/txtSearchStudent"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="O.N."
        android:id="@+id/textView21"
        android:textColor="#ff3b5020"
        android:textStyle="bold|italic"
        android:textSize="22dp"
        android:layout_below="@+id/textView11"
        android:layout_alignParentStart="true" />

</RelativeLayout>
