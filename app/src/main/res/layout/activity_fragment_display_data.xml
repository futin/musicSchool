<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.futin.tabletest.userInterface.fragments.FragmentDisplayData"
    android:id="@+id/displayDataLayout">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/txtBtnShowStudents"
        android:id="@+id/btnShowStudents"
        android:layout_marginTop="89dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/txtBtnShowInstruments"
        android:id="@+id/btnShowInstruments"
        android:layout_marginTop="41dp"
        android:layout_below="@+id/btnShowStudents"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/txtBtnShowStudentsWithInstruments"
        android:id="@+id/btnShowStudWithInst"
        android:layout_marginTop="43dp"
        android:layout_below="@+id/btnShowInstruments"
        android:layout_alignEnd="@+id/btnShowInstruments" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/txtBtnShowCities"
        android:id="@+id/btnShowCities"
        android:layout_marginTop="42dp"
        android:layout_below="@+id/btnShowStudWithInst"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
