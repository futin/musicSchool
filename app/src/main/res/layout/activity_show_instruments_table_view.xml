<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.futin.tabletest.userInterface.tables.ShowCitiesTableView"
    android:id="@+id/instrumentTableLayout">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Search:"
        android:id="@+id/textView10"
        android:layout_below="@+id/textView7"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp" />

    <ScrollView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/scrollViewInstruments"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="85dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true">

        <include layout="@layout/instrument_table_view"
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:layout_below="@+id/scrollViewInstruments"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="1dp"></include>
    </ScrollView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Instrument table"
        android:id="@+id/textView7"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="25dp"
        android:textStyle="bold|italic"
        android:textColor="#ff3b5020" />

    <EditText
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:id="@+id/txtSearchInstrument"
        android:hint="search for instrument"
        android:layout_alignBottom="@+id/textView10"
        android:layout_alignEnd="@+id/scrollViewInstruments"
        android:layout_toEndOf="@+id/textView10"
        android:layout_marginBottom="-5dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large text"
        android:id="@+id/txtNoResultInstrument"
        android:layout_alignTop="@+id/scrollViewInstruments"
        android:layout_alignParentStart="true"
        android:layout_marginTop="55dp"
        android:layout_alignEnd="@+id/scrollViewInstruments"
        android:textColor="#ff6c6c6c"
        android:textSize="30dp"
        android:textStyle="bold|italic"
        android:visibility="invisible" />


</RelativeLayout>
