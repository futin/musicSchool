<?xml version="1.0" encoding="utf-8"?>
<TableLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/tblLayoutCityHeader"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:shrinkColumns="*"
    android:stretchColumns="*">

    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/asd">

        <TextView
            android:id="@+id/cityIdColumnHeader"
            android:text="Id"
            android:textStyle="bold|italic"
            android:typeface="serif"
            android:layout_column="0"
            android:textSize="22dp"
            android:textColor="#ff3b5020"
            android:layout_gravity="center_horizontal"
            android:width="20dp"
            android:layout_width="0dp"></TextView>

        <TextView
            android:id="@+id/cityNameColumnHeader"
            android:text="Name"
            android:textStyle="bold|italic"
            android:typeface="serif"
            android:layout_column="1"
            android:layout_width="match_parent"
            android:textSize="22dp"
            android:textColor="#ff3b5020"
            android:layout_gravity="center_horizontal"></TextView>

        <TextView
            android:id="@+id/cityPttColumnHeader"
            android:text="Ptt"
            android:textStyle="bold|italic"
            android:typeface="serif"
            android:layout_column="2"
            android:textSize="22dp"
            android:textColor="#ff3b5020"
            android:layout_gravity="center_horizontal"></TextView>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/checkBoxCity"
            android:layout_column="3"
            android:textSize="22dp"
            android:textStyle="bold|italic"
            android:textColor="#ff3b5020"
            android:gravity="center"
            android:maxWidth="5dp" />

    </TableRow>

    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

    </TableRow>

    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

    </TableRow>

</TableLayout>
